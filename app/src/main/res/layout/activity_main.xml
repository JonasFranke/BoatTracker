<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        tools:context=".main.MainActivity">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/LongLat" tools:layout_editor_absoluteY="39dp"
                android:layout_row="0"
                android:layout_column="0"
                tools:layout_editor_absoluteX="177dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/kn" tools:layout_editor_absoluteY="39dp"
                android:layout_row="1"
                android:layout_column="0"
                android:paddingTop="20dp"
                tools:layout_editor_absoluteX="177dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/maxSpeed" tools:layout_editor_absoluteY="39dp"
                android:layout_row="2"
                android:layout_column="0"
                tools:layout_editor_absoluteX="177dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/avgSpeed" tools:layout_editor_absoluteY="39dp"
                android:layout_row="3"
                android:layout_column="0"
                tools:layout_editor_absoluteX="177dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/heading" tools:layout_editor_absoluteY="39dp"
                android:layout_row="4"
                android:layout_column="0"
                tools:layout_editor_absoluteX="177dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/acc" tools:layout_editor_absoluteY="39dp"
                android:layout_row="5"
                android:layout_column="0"
                tools:layout_editor_absoluteX="177dp"/>
</GridLayout>